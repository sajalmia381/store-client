## Use Node Slim image
FROM node:18-slim

ENV STORE_CLIENT_API_BASE_URL ''
ENV STORE_CLIENT_BASE_URL ''
ENV STORE_CLIENT_V1_BASE_URL ''
# Server Port
ENV STORE_CLIENT_PORT ''

ENV STORE_GA ''
ENV STORE_ADSENSE_CLIENT_ID ''

## Container Working path 
WORKDIR /app

## Copy builded code
COPY ./dist ./dist

## Expose container port
EXPOSE 4000

## Start the application
# CMD [ "node", "dist/store-client/server/main.js" ]